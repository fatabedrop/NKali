<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:id="@+id/linearLayout1">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="230.0dp"
        android:id="@+id/linearLayout2">
        <TextView
            android:text="Información básica"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="26.0dp"
            android:id="@+id/textView2"
            android:layout_marginTop="20dp"
            android:layout_gravity="left"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#ff212121" />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="98.5dp"
            android:id="@+id/gridLayout2">
            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView3"
                android:text="Nombre:"
                android:textColor="#ff212121"
                android:layout_gravity="center_vertical"
                android:paddingLeft="30dp" />
            <EditText
                android:inputType="textPersonName"
                android:id="@+id/edirnombre"
                android:ems="10"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp" />
            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView4"
                android:text="Apellido:"
                android:textColor="#ff212121"
                android:layout_row="1"
                android:layout_column="0"
                android:paddingLeft="30dp" />
            <EditText
                android:id="@+id/editapellido"
                android:ems="10"
                android:layout_gravity="clip_vertical"
                android:paddingLeft="10dp" />
            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView5"
                android:text="Contraseña:"
                android:layout_row="2"
                android:textColor="#ff212121"
                android:layout_column="0"
                android:paddingLeft="30dp" />
            <EditText
                android:id="@+id/password"
                android:ems="10"
                android:layout_gravity="clip_vertical"
                android:paddingLeft="10dp" />
        </GridLayout>

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="156.0dp"
        android:id="@+id/gridLayout3">
        <Button
            android:id="@+id/cancelar"
            android:layout_width="180dp"
            android:layout_height="55dp"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical" />
        <Button
            android:id="@+id/guardar"
            android:layout_width="180dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical" />
    </GridLayout>
    <GridLayout
        android:layout_width="368dp"
        android:layout_height="65dp"
        android:layout_gravity="center_horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageButton
            android:id="@+id/miNegocio"
            android:layout_width="92.0dp"
            android:layout_height="60.0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="5dp"
            android:background="#ffffff"
            android:baselineAlignBottom="true"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/buscar"
            android:layout_width="92.0dp"
            android:layout_height="60.0dp"
            android:layout_marginEnd="0dp"
            android:background="#ffffff"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/promociones"
            android:layout_width="92.0dp"
            android:layout_height="60.0dp"
            android:layout_marginEnd="0dp"
            android:background="#ffffff"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/perfil"
            android:layout_width="92.0dp"
            android:layout_height="60.0dp"
            android:layout_marginEnd="0dp"
            android:background="#ffffff"
            android:scaleType="fitXY" />

    </GridLayout>

</LinearLayout>
